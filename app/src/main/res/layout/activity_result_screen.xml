<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d4d4d4"
    android:clickable="false"
    android:transitionGroup="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_title"
        android:id="@+id/appTitleText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:background="#9b53b4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_margin="5dp"
        android:height="50dp"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/performance_results"
        android:id="@+id/performanceResultsText"
        android:textSize="30dp"
        android:layout_below="@+id/appTitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_number_questions"
        android:id="@+id/totalNumberQuestionsText"
        android:padding="10dp"
        android:layout_above="@+id/numberQuestionsAttemptedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/number_questions_attempted"
        android:id="@+id/numberQuestionsAttemptedText"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/number_correct_answers"
        android:id="@+id/numberCorrectAnswersText"
        android:singleLine="true"
        android:padding="10dp"
        android:layout_below="@+id/numberQuestionsAttemptedText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit_button"
        android:id="@+id/exitQuizButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/appTitleText"
        android:layout_alignStart="@+id/appTitleText"
        android:background="#5e62c1"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:width="150dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:onClick="onClickExit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play_again_button"
        android:id="@+id/buttonPlayAgain"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#5e62c1"
        android:layout_toRightOf="@+id/numberCorrectAnswersText"
        android:layout_toEndOf="@+id/numberCorrectAnswersText"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:width="150dp" />

</RelativeLayout>
